<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upgrade_your_pawn_to"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/blackqueen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blackqueen"
            android:tag="blackqueen"
            android:onClick="getChoice"/>
        <ImageView
            android:id="@+id/blackrook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blackrook"
            android:tag="blackrook"
            android:onClick="getChoice"/>
        <ImageView
            android:id="@+id/blackknight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blackknight"
            android:tag="blackknight"
            android:onClick="getChoice"/>
        <ImageView
            android:id="@+id/blackbishop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blackbishop"
            android:tag="blackbishop"
            android:onClick="getChoice"/>
    </LinearLayout>

</LinearLayout>